{
  "name": "@ghostnumber7/splashr",
  "publishConfig": {
    "tag": "latest",
    "access": "public",
    "scope": "@ghostnumber7",
    "registry": "https://npm.pkg.github.com"
  },
  "files": [
    "dist",
    "types"
  ],
  "version": "0.4.0",
  "description": "A React component that adds a Splash Screen to your app.",
  "exports": {
    "require": "./dist/splashr.cjs",
    "default": "./dist/splashr.m.js",
    "types": "./types/index.d.ts"
  },
  "main": "dist/splashr.cjs",
  "umd:main": "dist/splashr.umd.js",
  "module": "dist/splashr.m.js",
  "source": "src/index.js",
  "types": "types/index.d.ts",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ghostnumber7/splashr.git"
  },
  "scripts": {
    "prepublishOnly": "npm run build",
    "lint": "eslint src",
    "test": "jest --verbose --coverage",
    "test:watch": "jest --watch --runInBand --silent",
    "prebuild": "npm run lint && npm t && rimraf dist",
    "build": "microbundle -o dist/ --sourcemap false --target web --jsx React.createElement",
    "pack": "rimraf pack && mkdir pack && npm run prepublishOnly && npm pack --pack-destination pack",
    "dev": "microbundle watch -o dist/ --sourcemap false --compress false --jsx React.createElement"
  },
  "keywords": [
    "react-hooks",
    "hooks",
    "react",
    "utils",
    "lib",
    "suspense",
    "splash-screen"
  ],
  "author": "donavon",
  "devDependencies": {
    "@babel/core": "^7.25.8",
    "@babel/preset-env": "^7.25.8",
    "@babel/preset-react": "^7.25.7",
    "@testing-library/jest-dom": "^6.6.2",
    "@testing-library/react": "^16.0.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.1",
    "eslint-config-amex": "^16.1.0",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-jest-dom": "^4.0.3",
    "eslint-plugin-react": "^7.37.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "globals": "^15.11.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "microbundle": "^0.15.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^6.0.1"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^18.3.1"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "dependencies": {
    "prop-types": "^15.8.1"
  }
}
